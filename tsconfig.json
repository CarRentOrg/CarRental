{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./"
    },
    "include": [
        "api/**/*",
        "server/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "client"
    ]
}